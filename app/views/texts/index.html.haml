%h1 Listing texts

%table
  %thead
    %tr
      %th Title
      %th Link
      %th Body
      %th
      %th
      %th

  %tbody
    - @texts.each do |text|
      %tr
        %td= text.title
        %td= text.link
        %td= text.body
        %td= link_to 'Show', text
        %td= link_to 'Edit', edit_text_path(text)
        %td= link_to 'Destroy', text, method: :delete, data: { confirm: 'Are you sure?' }

%br

