%h1 Home#page
%p Find me in app/views/home/page.html.haml

%div#elm
  %span.elm-error
    Loading the widget...

= javascript_include_tag 'plugins/home', "data-turbo-eval": "false", defer: true
:javascript
  function loadElm() {
    var enode = document.getElementById("elm")
      if (enode) {
        Elm.Main.init({
        flags: 1,
        node: enode
      });
    }
  }

  document.addEventListener('turbo:load', loadElm)
